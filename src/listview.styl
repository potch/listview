@import 'mixins'
@import 'params'

list-view, list-view * {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}
list-view {
  overflow: auto;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
  position: relative;
  height: 100%;
  width: 100%;
  max-height: 100%;
  max-width: 100%;
  display: block;

  .list {
    position: relative;
    transform: translateZ(0);
  }
  .item {
    line-height: 40px;
    font-family: 'Fira Sans';
    padding: 3px 1em 3px 64px;
    position: absolute;
    height: 48px;
    width: 100%;
    border-bottom: 1px solid #ccc;
    cursor: pointer;
    &:hover {
      background: #eee;
    }
  }
  .item img {
    position: absolute;
    top: 8px;
    left: 14px;
    width: 32px;
    height: 32px;
    border-radius: 48px;
    background: #ccc;
  }

  &.scrolling {
    .item {
      pointer-events: none;
    }
  }
}