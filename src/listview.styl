@import 'mixins'
@import 'params'

list-view, list-view * {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}
list-view {
  overflow: auto;
  position: relative;
  height: 100%;
  width: 100%;
  max-height: 100%;
  max-width: 100%;
  display: block;

  .list {
    position: relative;
  }
  .item {
    line-height: 42px;
    font-family: monospace;
    padding: 4px 1em 4px 64px;
    position: absolute;
    height: 48px;
    width: 100%;
  }
  .item:after {
    content: '';
    position: absolute;
    top: 8px;
    left: 8px;
    width: 32px;
    height: 32px;
    border-radius: 2px;
    background: #ccc;
  }
}